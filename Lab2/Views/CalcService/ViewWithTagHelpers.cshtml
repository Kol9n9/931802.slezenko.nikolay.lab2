@model Lab2.Models.CalcResult
@{
    var action = ViewContext.RouteData.Values["Action"] as string;
    ViewBag.Title = action;
    var operations = new SelectList( new[] {"+", "-", "*", "/"});
}
<h1>@action</h1>

<form asp-controller="CalcService" asp-action="@action">
    <input asp-for="FirstValue" /><br />
    <select asp-for="Operation" asp-items="operations" ></select><br />
    <input asp-for="SecondValue" /><br />
    <input type="submit" value="Submit" />
</form>